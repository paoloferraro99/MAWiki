
<div class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1><%= markdown @wiki.title %></h1>
    </div>

    <div class="col-md-4 new-edit">
      <% if policy(@wiki).edit? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% end %>

      <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      <% end %>
    </div>
  </div>
</div>



<div class="row">
  <div class="col-md-8">
    <div class="col-md-10 well">
      <h3><%= markdown @wiki.outline %></h3>
    </div>

    <div class="col-md-12 media">
      <p><%= markdown @wiki.body %></p>
    </div>
  </div>

  <div class="col-md-4 wiki-by">
    <p>Wiki created by: <%= @wiki.user.name %></p>
    Collaborators:
    <% @collaborations.each do |collaboration| %>
    <br/><%= collaboration.name %> ( <%= collaboration.email %> )
    <% end %>
    <% if @collaborations.empty? %>none<% end %>
  </div>


</div>

