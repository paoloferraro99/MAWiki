
<div class="page-header">
	<div class="row">
		<div class="col-md-8">
			<h1>Wikis</h1>
		</div>
		<div class="col-md-4 new-edit">
			<% if policy(Wiki.new).create? %>
			<%= link_to "Create Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
			<% end %>
		</div>
	</div>
</div>



<% @wikis.each do |wiki| %>
<div class="media">
	<div class="media-body">
		<h4 class="media-heading">
			<p><%= link_to wiki.title, wiki %>
				<% if wiki.public == false %><span class="label label-danger">Private Wiki</span><% end %>
			</p>
		</h4>
		<small>
			Wiki created by <%= wiki.user.name %>
		</small>
	</div>
</div>

<% end %>


<div class="apple_pagination">
	<%= will_paginate @wikis %>
</div>



