

<h1>Wikis</h1>

<% if policy(Wiki.new).create? %>
	<%= link_to "Create Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>


<% @wikis.each do |wiki| %>
	<div class="media">
		<div class="media-body">
			<h4 class="media-heading">
				<p><%= link_to wiki.title, wiki %></p>
			</h4>
			<small>
				Wiki created by <%= wiki.user.name %>
			</small></br>
			<small>
				Public = <%= wiki.public? %>
			</small>
	
		</div>
	</div>
	
<% end %>

	

