<h1>Edit your wiki</h1>

<div class="row">
   
	<div class="col-md-8">
		<%= form_for @wiki do |f| %>
	 
		    <div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
			</div>		   
			<div class="form-group">
				<%= f.label :outline %>
				<%= f.text_area :outline, rows: 5, class: 'form-control', placeholder: "Make an outline" %>
			</div>
		   
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, rows: 12, class: 'form-control', placeholder: "Go further in depth according to outline" %>
			</div>
		   
			<% if current_user.role == 'premium' %>
			
		   	<div class="form-group">
					<%= f.label :public %> - uncheck to make private
					<%= f.check_box :public, class: 'form-control' %>
				</div>
      	




	   <% end %>


			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>



		<%= form_tag '/collaborations' do %>
	    	<br/>
	    	<h4>Add collaborators: </h4>
	    	<table class="table">
	      	<tr>
		        <th>Name</th>
		        <th>Email</th>
		        <th>Give Access</th>
	      	</tr>

		      <%= hidden_field_tag :wiki_id, @wiki.id %>

		      <% @users.each do |user| %>
		        	<tr>
		          	<td><%= user.name %></td>
		         	<td><%= user.email %></td>
		          	<td>
		            	<%= check_box_tag "user_ids[]", user.id,
		              		@wiki.collaborations.where(user_id: user.id).any? %>
		          		</td>
		        	</tr>

		     	<% end %>
		   </table>
		   <p> <%= submit_tag 'Add Collaborators', class: 'btn btn-info' %> 

		<% end %>


  <!-- experiment -->
  		<% @wiki.collaborations.each do |collaboration| %>
       	<li>
       		<%= collaboration.user.name %> <%= link_to "Delete", collaboration_path(collaboration), method: :delete %>
       	</li>
      <% end %>
<!-- experiment -->
  

	</div>
	
</div>
 
